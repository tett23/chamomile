.form-group
  %label{for: 'wiki[name]'}name
  =f.text_field :name, class: 'form-control'
  %label{for: 'wiki[slug]'}slug
  =f.text_field :slug, class: 'form-control'
.form-group
  %label{for: 'wiki[description]'}description
  =f.text_area :description, rows: 20, class: 'form-control'
.form-group
  =f.submit 'submit', class: 'btn btn-submit'
  =button_link 'cancel', wiki_index_path
