!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:'http-equiv'=>'X-UA-Compatible', :'content'=>'IE=edge'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %title Chamomile
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application", 'templates', 'view_models'
    = csrf_meta_tags
  %body
    =render partial: 'parts/header'
    -if user_signed_in?
      %section#main.container{v: {on: 'click: data.recent'}}
        -unless @current_wiki.nil?
          =render partial: 'parts/wiki_header'
        =yield
        {{> recent}}
    -else
      =yield
